<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TipsActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/image_background_tips">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:padding="20dp"
                android:background="@drawable/background_home_button_red"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginVertical="10dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_fire"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/candara"
                    android:gravity="center"
                    android:text="Calcola il tuo intake calorico!"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:paddingStart="15dp"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal"
                android:background="@drawable/background_white_corners">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/peso"
                    android:layout_marginEnd="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPeso"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/candara"
                        android:inputType="numberDecimal"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout2"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/percentuale_massa_grassa">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMassaGrassa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/candara"
                        android:inputType="numberDecimal"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_card_first_access_d1">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout5"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/durata_allenamento">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDurataAllenamento"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/candara"
                        android:inputType="number"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/background_card_first_access_d2">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout7"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/numero_di_allenamenti">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNumeroAllenamenti"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/candara"
                        android:inputType="number"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:paddingTop="10dp"
                android:background="@drawable/background_card_first_access_d1">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout3"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/indice_di_attivita"
                    android:paddingEnd="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etIndiceAttivita"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/candara"
                        android:inputType="numberDecimal"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipInfoAttivita"
                    android:layout_width="48dp"
                    android:layout_height="36dp"
                    android:fontFamily="@font/candara"
                    android:text="@string/info"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:onClick="infoDialogIndiceAttivita"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@color/white">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout4"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/effetto_termico"
                    android:paddingEnd="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEffettoTermico"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/candara"
                        android:inputType="numberDecimal"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipInfoEffettoTermico"
                    android:layout_width="48dp"
                    android:layout_height="36dp"
                    android:fontFamily="@font/candara"
                    android:text="@string/info"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:onClick="infoDialogEffettoTermico"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/background_card_first_access_d2">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayout6"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/bilancio_energetico"
                    android:paddingEnd="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etBilancioEnergetico"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/candara"
                        android:inputType="numberDecimal"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipInfoBilancioEnergetico"
                    android:layout_width="48dp"
                    android:layout_height="36dp"
                    android:fontFamily="@font/candara"
                    android:text="@string/info"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:onClick="infoDialogBilancioEnergetico"/>

            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="saveData"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_down_arrow"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_margin="20dp">

                <!-- Table Heading -->

                <TableRow
                    android:background="@color/bluChiaro">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@android:color/white"
                        android:padding="10sp"
                        android:textSize="14sp"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/candara"
                        android:textStyle="italic"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/obiettivo"
                        android:textColor="@android:color/white"
                        android:padding="10sp"
                        android:textSize="14sp"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/candara"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/minimo"
                        android:textColor="@android:color/white"
                        android:padding="10sp"
                        android:textSize="14sp"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/candara"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/massimo"
                        android:textColor="@android:color/white"
                        android:padding="10sp"
                        android:textSize="14sp"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/candara"
                        android:textStyle="bold"/>


                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/obiettivo_calorie"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/candara"
                        android:textStyle="bold"
                        android:background="@color/bluChiaro"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/obiettivoCalorie"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/minimoCalorie"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/massimoCalorie"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:textStyle="bold"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/carboidrati"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/candara"
                        android:textStyle="bold"
                        android:background="@color/bluChiaro"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/obiettivoCarbo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/minimoCarboidrati"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/massimoCarboidrati"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/proteine"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/candara"
                        android:textStyle="bold"
                        android:background="@color/bluChiaro"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/obiettivoProteine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/minimoProteine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/massimoProteine"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"/>

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/grassi"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/candara"
                        android:textStyle="bold"
                        android:background="@color/bluChiaro"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/obiettivoGrassi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/minimoGrassi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/massimoGrassi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/zero"
                        android:padding="10sp"
                        android:textSize="15sp"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"/>

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>